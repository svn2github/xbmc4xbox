INCLUDES=-I. -I../../addons/include -I../librefmem

ARCH=@ARCH@
SO=AddonLib-$(ARCH).so
ARCHIVE=$(SO:.so=.a)
SYSDIR=../../../system
SLIB=$(SYSDIR)/$(SO)

#DIRS=../librefmem
SLIBS=$(SYSDIR)/librefmem.so
OBJS+=setting.o
OBJS+=settings.o
OBJS+=debug.o

.PHONY: compile

$(SLIB): $(SLIBS)
	$(CXX) $(CFLAGS) -shared -o $(SLIB) -Wl, -lrefmem 
	
$(SLIBS): compile

librefmem.so:
	$(MAKE) -C ../librefmem

-include ../../../Makefile.include

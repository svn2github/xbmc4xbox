        --enable-static \
        --disable-shared \
        --with-pic
    if [[ $? -ne 0 ]]; then
        popd
        AC_MSG_ERROR([[Submodule xbmc/cores/dvdplayer/Codecs/libDVDCSS failed to configure]])
    else
        popd
    fi;
    else
    AC_MSG_ERROR([[Submodule xbmc/cores/dvdplayer/Codecs/libDVDCSS doesn't exist]])
    fi;
fi


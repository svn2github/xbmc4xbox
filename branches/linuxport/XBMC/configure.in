    ./configure \
    --extra-cflags="-D_XBOX" \
    --disable-static \
    --disable-altivec \
    --disable-vhook \
    --disable-ipv6 \
    --disable-debug \
    --disable-muxers \
    --disable-encoders \
    --disable-devices \
    --disable-ffplay \
    --disable-ffserver \
    --disable-ffmpeg \
    --enable-shared \
    --enable-postproc \
    --enable-gpl \
    --enable-swscale \
    --enable-protocol=http \
    --enable-pthreads
])
XB_CONFIG_MODULE([xbmc/cores/dvdplayer/Codecs/libdts], [
  ./configure \
    --disable-oss \
    --disable-solaris-adio \
    --disable-al-audio \
    --disable-win \
    CFLAGS="-fPIC"
])

# We need this whole block so we could have optional support of DVDCSS.
if [[ $BUILD_DVDCSS == 1 ]]; then
    if [[ -d xbmc/cores/dvdplayer/Codecs/libDVDCSS ]]; then
    pushd xbmc/cores/dvdplayer/Codecs/libDVDCSS

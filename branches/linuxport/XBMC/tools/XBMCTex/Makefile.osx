
DEFINES = -DUSE_SDL -D_LINUX
INCLUDES = -I. -I../../guilib -I../../xbmc -I../../xbmc/linux/ -I../../xbmc/utils -I/opt/local/include
LIBS = -lSDL-osx -lSDL_image-osx -llzo
LDFLAGS = -L/opt/local/lib -L../../xbmc/lib/libSDL-OSX -lSDLmain-osx -framework Foundation -framework Cocoa -framework OpenGL -framework Carbon -framework Quartz -framework Quicktime -framework AudioUnit -framework IOKit
OBJS = \
	AnimatedGif.o \
	Bundler.o \
	SurfaceSDL.o \
	XBMCTex.o \
	xbox.o \
	xwinapi.o \
	XFileUtils.o \
	XHandle.o \
	XTimeUtils.o \
	sha.o

TARGET = XBMCTex

all: $(TARGET)
	
$(TARGET): $(OBJS)
	g++ -isysroot /Developer/SDKs/MacOSX10.4u.sdk -mmacosx-version-min=10.4 $(OBJS) $(LDFLAGS) $(LIBS) -o $(TARGET)

.cpp.o:
	g++ -isysroot /Developer/SDKs/MacOSX10.4u.sdk -mmacosx-version-min=10.4 $(DEFINES) $(INCLUDES) -c -o $@ $<

.c.o:
	gcc -isysroot /Developer/SDKs/MacOSX10.4u.sdk -mmacosx-version-min=10.4 $(DEFINES) $(INCLUDES) -c -o $@ $<

clean:
	rm -f $(TARGET) *.o

ARCH=@ARCH@
LIBDIR=@libdir@
INCLUDES=-I. -I../../include -I../../xbmc/addons
DEFINES+=
CXXFLAGS=-fPIC
OBJS=libXBMC_pvr.o

SLIB=libXBMC_pvr.so.0.0.1

$(SLIB): $(OBJS)
ifeq ($(findstring osx,$(ARCH)), osx)
	@export MACOSX_DEPLOYMENT_TARGET=10.4
	$(CXX) -bundle -shared -flat_namespace -undefined suppress -o $(SLIB) $(OBJS)
	../../tools/Mach5/wrapper.rb $@;mv output.so $@
else
	$(CXX) $(CFLAGS) -shared -g -o $(SLIB) $(OBJS)
endif
	@ln -sf $(SLIB) libXBMC_pvr.so.0
	@ln -sf $(SLIB) libXBMC_pvr.so

include ../../Makefile.include

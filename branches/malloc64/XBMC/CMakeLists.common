# Traverse each directory listed in DIRS.
FOREACH(dir ${DIRS})
  ADD_SUBDIRECTORY(${dir})
ENDFOREACH()

# Create _SRCS as SRCS with full path.
SET(_SRCS)
FOREACH(src ${SRCS})
  SET(_SRCS ${_SRCS} "${CMAKE_CURRENT_SOURCE_DIR}/${src}")
ENDFOREACH()

# Add _SRCS to BIN_SRCS from the parent directroy.
SET(${BIN_NAME}_SRCS ${${BIN_NAME}_SRCS} ${_SRCS} PARENT_SCOPE)


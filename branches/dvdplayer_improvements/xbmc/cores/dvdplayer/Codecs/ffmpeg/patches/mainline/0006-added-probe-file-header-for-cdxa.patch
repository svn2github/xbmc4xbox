--- ffmpeg.orig/libavformat/mpeg.c	2011-08-04 20:46:47.504520200 +0100
+++ ffmpeg/libavformat/mpeg.c	2011-08-04 20:51:40.405775800 +0100
@@ -49,6 +49,18 @@
     return pes1||pes2;
 }
 
+static int cdxa_probe(AVProbeData *p)
+{
+    /* check file header */
+    if (p->buf[0] == 'R' && p->buf[1] == 'I' &&
+        p->buf[2] == 'F' && p->buf[3] == 'F' &&
+        p->buf[8] == 'C' && p->buf[9] == 'D' &&
+        p->buf[10] == 'X' && p->buf[11] == 'A')
+        return AVPROBE_SCORE_MAX;
+    else
+        return 0;
+}
+
 static int mpegps_probe(AVProbeData *p)
 {
     uint32_t code= -1;
@@ -56,6 +68,10 @@
     int i;
     int score=0;
 
+    score = cdxa_probe(p);
+    if (score > 0) return score;
+

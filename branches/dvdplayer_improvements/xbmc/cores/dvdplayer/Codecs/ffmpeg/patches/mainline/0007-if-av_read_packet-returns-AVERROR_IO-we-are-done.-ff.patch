+++ ffmpeg/libavformat/utils.c	2011-08-04 20:51:41.066726200 +0100
@@ -1250,6 +1250,8 @@
             if (ret < 0) {
                 if (ret == AVERROR(EAGAIN))
                     return ret;
+                if (ret == AVERROR_IO)
+                    return ret;
                 /* return the last frames, if any */
                 for(i = 0; i < s->nb_streams; i++) {
                     st = s->streams[i];

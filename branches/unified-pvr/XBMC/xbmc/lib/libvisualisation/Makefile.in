ARCH=@ARCH@
INCLUDES=-I. -I../../addons/include -I../librefmem
SO=VisualisationLib-$(ARCH).so
ARCHIVE=$(SO:.so=.a)
SYSDIR=../../../system
LIB=libvisualisation.a
SLIB=$(SYSDIR)/$(SO)
DIRS=../librefmem
SLIBS=../librefmem/librefmem.a
OBJS+=track.o
OBJS+=preset.o
OBJS+=presets.o

.PHONY: compile

$(SLIB): $(LIB)
	$(CC) $(LIB) -shared -o $(SLIB) $(SLIBS)

$(SLIBS): compile

../librefmem/librefmem.a:
	$(MAKE) -C ../librefmem

include ../../../Makefile.include

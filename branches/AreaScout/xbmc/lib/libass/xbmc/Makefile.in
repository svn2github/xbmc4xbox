ARCH=@ARCH@
SYSDIR=../../../../system/players/dvdplayer
SO=libass-$(ARCH).so
LIB=$(SYSDIR)/$(SO)

.PHONY: compile

$(LIB): ../libass/.libs/libass.so
	cp ../libass/.libs/libass.so $@

../libass/.libs/libass.so: compile
	CFLAGS="-D_LINUX -D_DLL -fPIC -O2" $(MAKE) -C ..

clean:
	$(MAKE) -C .. clean
	rm -f $(LIB)

distclean:
	$(MAKE) -C .. distclean
	rm -f $(LIB)


<window id="2004">
	<defaultcontrol>2</defaultcontrol>
	<animation effect="fade" time="500">WindowOpen</animation>
	<animation effect="fade" time="500" condition="!Window.IsActive(Home)">WindowClose</animation>
	<controls>
		<control type="image" id="0">
			<description>music rectangle</description>
			<posx>30</posx>
			<posy>381</posy>
			<width>90</width>
			<height>120</height>
			<texture>blue_rectangle_music.png</texture>
			<include>mediaoverlay</include>
		</control>
		<control type="image" id="0">
			<description>music logo</description>
			<posx>35</posx>
			<posy>387</posy>
			<width>80</width>
			<height>109</height>
			<texture>defaultAlbumCover.png</texture>
			<info>MusicPlayer.Cover</info>
			<aspectratio align="left">keep</aspectratio>
			<include>mediaoverlay</include>
		</control>
		<control type="label" id="0">
			<description>play time label</description>
			<posx>35</posx>
			<posy>500</posy>
			<label>-</label>
			<info>MusicPlayer.Time</info>
			<align>left</align>
			<font>font13</font>
			<include>mediaoverlay</include>
		</control>
		<control type="fadelabel" id="0">
			<description>album/artist/genre etc info label</description>
			<width>130</width>
			<posx>35</posx>
			<posy>525</posy>
			<font>font10</font>
			<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Title, | ]$INFO[MusicPlayer.Album, | ]$INFO[MusicPlayer.Year, | ]</label>
			<include>mediaoverlay</include>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<scraper name="allgame" content="programs" thumb="allgame.gif">
	<GetSettings dest="3">
		<RegExp input="$$5" output="&lt;settings&gt;\1&lt;/settings&gt;" dest="3">
			<RegExp input="$$1" output="&lt;setting label=&quot;Enable Fanart&quot; type=&quot;bool&quot; id=&quot;fanart&quot; default=&quot;true&quot;&gt;&lt;/setting&gt;" dest="5+">
				<expression></expression>
			</RegExp>
			<expression noclean="1"></expression>
		</RegExp>
	</GetSettings>
	<NfoUrl dest="3">
		<RegExp input="$$1" output="\1" dest="3">
			<expression>(http://www.allgame.com/cg/.*)</expression>
		</RegExp>
	</NfoUrl>
	<CreateProgramSearchUrl dest="3"><RegExp input="$$1" output="&lt;url post=&quot;yes&quot;&gt;http://www.allgame.com/search.php?sql=\1&amp;amp;opt1=81&lt;/url&gt;" dest="3">
			<expression></expression>
		</RegExp>
	</CreateProgramSearchUrl><GetProgramSearchResults dest="8"><RegExp input="$$5" output="&lt;results&gt;\1&lt;/results&gt;" dest="8">
			<expression noclean="1"></expression>
			<RegExp input="$$1" output="&lt;entity&gt;&lt;title&gt;\2&lt;/title&gt;&lt;url&gt;http://www.allgame.com/game.php?id=\1&lt;/url&gt;&lt;year&gt;\3&lt;/year&gt;&lt;platform&gt;\4&lt;/platform&gt;&lt;/entity&gt;" dest="5">
				<expression noclean="1" repeat="yes">&lt;tr.*?id="trlink".*?&gt;.*?&lt;a href="game.php\?id=(.*?)"&gt;(.*?)&lt;/a&gt;.*?&lt;td.*?&gt;.*?([0-9]+?)&lt;/td&gt;.*?&lt;a href="platform.php\?id=.*?"&gt;(.*?)&lt;/a&gt;.*?&lt;/tr&gt;</expression>
			</RegExp>
		</RegExp>
	</GetProgramSearchResults><GetProgramDetails dest="3">
		<RegExp input="$$5" output="&lt;details&gt;\1&lt;/details&gt;" dest="3">
			<RegExp input="$$1" output="&lt;type&gt;1&lt;/type&gt;" dest="5">
				<expression noclean="1"></expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;title&gt;\1&lt;/title&gt;" dest="5+">
				<expression trim="1">&lt;title&gt;(.*) - Overview - allgame&lt;/title&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;url post=&quot;yes&quot; function=&quot;GetFanartId&quot;&gt;http://htbackdrops.com/search.php?cat_id=2&amp;amp;search_fields=all&amp;amp;search_keywords=\1&amp;amp;search_terms=all&lt;/url&gt;" dest="5+">
				<expression trim="1">&lt;title&gt;(.*) - Overview - allgame&lt;/title&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;platform&gt;\2&lt;/platform&gt;" dest="5+">
				<expression noclean="1">&lt;h3&gt;Platform&lt;/h3&gt;&lt;p&gt;&lt;a href="platform.php[^&gt;]*&gt;(&lt;img.*? alt=")?(.*?)(" /&gt;)?&lt;/a&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;description&gt;\1&lt;/description&gt;" dest="5+">
				<expression>&lt;h2 class="title"&gt;Synopsis&lt;/h2&gt;.*&lt;p class="author"&gt;[^&lt;]*&lt;/p&gt;[^&lt;]*&lt;p&gt;(.*?)&lt;/p&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;genre&gt;\1&lt;/genre&gt;" dest="5+">
				<expression noclean="1">&lt;h3&gt;Genre&lt;/h3&gt;.*&lt;a href="genre.php\?id=[^"]*"&gt;(.*?)&lt;/a&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;style&gt;\1&lt;/style&gt;" dest="5+">
				<expression noclean="1">&lt;h3&gt;Style&lt;/h3&gt;.*&lt;a href="style.php\?id=[^"]*"&gt;(.*?)&lt;/a&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;releasedate&gt;\1&lt;/releasedate&gt;" dest="5+">
				<expression noclean="1">&lt;h3&gt;Release Date&lt;/h3&gt;&lt;p&gt;(.*?)&lt;/p&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;year&gt;\1&lt;/year&gt;" dest="5+">
				<expression noclean="1">&lt;h3&gt;Release Date&lt;/h3&gt;&lt;p&gt;.*?([0-9]+)&lt;/p&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;publisher&gt;\1&lt;/publisher&gt;" dest="5+">
				<expression noclean="1" repeat="yes">&lt;h3&gt;Publisher&lt;/h3&gt;.*&lt;a href="company.php\?id=[^"]*"&gt;(.*?)&lt;/a&gt;</expression>
			</RegExp>
			<RegExp input="$$1" output="&lt;thumb&gt;http://image.allmusic.com/\1&lt;/thumb&gt;" dest="5+">
				<expression noclean="1">http://image.allmusic.com/([^"]*)"</expression>
			</RegExp>
			<RegExp conditional="fanart" input="$$2" output="&lt;url function=&quot;GetFanart&quot; post=&quot;true&quot;&gt;http://htbackdrops.com/search.php?cat_id=2&amp;search_fields=all&amp;search_keywords=$$9&amp;search_terms=any&lt;/url&gt;" dest="5+">
				<expression></expression>
			</RegExp>
			<expression noclean="1"></expression>
		</RegExp>
	</GetProgramDetails>
	<GetFanartId dest="5"><RegExp input="$$1" output="&lt;details&gt;&lt;url function=&quot;GetFanart&quot;&gt;http://htbackdrops.com/details.php?image_id=\1&lt;/url&gt;&lt;/details&gt;" dest="5">
			<expression>&lt;a href="\./details.php\?image_id=([0-9]+)&amp;amp;mode=search"&gt;&lt;img</expression>
		</RegExp>
	</GetFanartId><GetFanart dest="5"><RegExp input="$$2" output="&lt;details&gt;&lt;fanart url=&quot;http://htbackdrops.com/&quot;&gt;\1&lt;/fanart&gt;&lt;/details&gt;" dest="5">
			<RegExp input="$$1" output="&lt;thumb preview=&quot;/data/thumbnails/\1&quot;&gt;/data/media/\1&lt;/thumb&gt;" dest="2">
				<expression repeat="yes">&lt;img src="./data/media/(.*?)"</expression>
			</RegExp>
			<expression noclean="1">(.+)</expression>
		</RegExp>
	</GetFanart></scraper>


ARCH=@ARCH@
SO=ImageLib-$(ARCH).so
ARCHIVE=$(SO:.so=.a)
SYSDIR=../../../system
LIB=$(SYSDIR)/$(SO)
DIRS=CxImage raw jbig tiff
LIBS=CxImage/cximage.a raw/raw.a jbig/jbig.a tiff/tiff.a

ifeq ($(ARCH), osx)
	export MACOSX_DEPLOYMENT_TARGET=10.4
	export ARCH
	CFLAGS+=-O2
	CFLAGS+=-isysroot /Developer/SDKs/MacOSX10.4u.sdk -mmacosx-version-min=10.4
	DIRS+=jasper jpeg
	LIBS+=jasper/jasper.a jpeg/jpeg.a
else
	DIRS+=zlib
	LIBS+=zlib/libz.a
endif

.PHONY: compile

$(LIB): $(LIBS)
ifeq ($(ARCH), osx)
	gcc -bundle -flat_namespace -undefined suppress -shared -fPIC -lpng -L/opt/local/lib \
		-mmacosx-version-min=10.4 -o $@ \
		CxImage/*.o jasper/*/*.o jbig/*.o jpeg/*.o raw/*.o tiff/*.o
	../../../tools/Mach5/wrapper.rb $@;mv output.so $@
	chmod +x $@
else 
	gcc -shared -o $(LIB) -Wl,--whole-archive -lpng -ljasper -ljpeg \
		$(LIBS) -Wl,--no-whole-archive \
		`cat ../../cores/DllLoader/exports/wrapper.def` \
		../../cores/DllLoader/exports/wrapper.o
endif

$(LIBS): compile 

CxImage/cximage.a:
	$(MAKE) -C CxImage ARCH=$(ARCH)

jbig/jbig.a:
	$(MAKE) -C jbig

raw/raw.a:
	$(MAKE) -C raw

zlib/libz.a:
	$(MAKE) -C zlib

jasper/jasper.a:
	$(MAKE) -C jasper

jpeg/jpeg.a:
	$(MAKE) -C jpeg

tiff/tiff.a:
	$(MAKE) -C tiff

clean:
	for d in $(DIRS); do (cd $$d; $(MAKE) clean ); done
	rm -f $(LIB)

distclean:
	-for d in $(DIRS); do (cd $$d; $(MAKE) distclean ); done
	rm -f $(LIB)

-include Makefile.include


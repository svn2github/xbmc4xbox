<window>
  <id>2004</id>
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posX>60</posX>
      <posY>380</posY>
      <width>140</width>
      <height>118</height>
      <texture>blue_rectangle_video.png</texture>
      <colorkey>0</colorkey>
      <colordiffuse>ffffffff</colordiffuse>
    </control>

    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>1</id>
      <posX>65</posX>
      <posY>385</posY>
      <width>130</width>
      <height>107</height>
    </control>

    <control>
      <description>play time label</description>
      <type>label</type>
      <id>0</id>
      <posX>93</posX>
      <posY>500</posY>
      <label>-</label>
      <info>VideoPlayer.TimeSpeed</info>
      <align>left</align>
      <font>font13</font>
    </control>

    <control>
      <description>play logo</description>
      <type>image</type>
      <id>0</id>
      <posX>65</posX>
      <posY>503</posY>
      <width>20</width>
      <height>20</height>
      <texture>music-play.png</texture>
      <visible>Player.Playing</visible>
    </control>

    <control>
      <description>Pause logo</description>
      <type>image</type>
      <id>0</id>
      <posX>65</posX>
      <posY>503</posY>
      <width>20</width>
      <height>20</height>
      <texture>music-pause.png</texture>
      <visible>Player.Paused</visible>
    </control>

    <control>
      <description>FF logo</description>
      <type>image</type>
      <id>0</id>
      <posX>65</posX>
      <posY>503</posY>
      <width>20</width>
      <height>20</height>
      <texture>music-forward.png</texture>
      <visible>Player.Forwarding</visible>
    </control>

    <control>
      <description>RW logo</description>
      <type>image</type>
      <id>0</id>
      <posX>65</posX>
      <posY>503</posY>
      <width>20</width>
      <height>20</height>
      <texture>music-rewind.png</texture>
      <visible>Player.Rewinding</visible>
    </control>

    <control>
      <description>album/artist/genre etc info label</description>
      <type>fadelabel</type>
      <width>130</width>
      <posX>65</posX>
      <posY>525</posY>
      <font>font10</font>
      <id>0</id>
      <info>VideoPlayer.Title</info>
      <info>VideoPlayer.Year</info>
      <info>VideoPlayer.Director</info>
      <info>VideoPlayer.Genre</info>
    </control>

  </controls>

</window>


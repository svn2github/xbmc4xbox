  <controls>
    <control>
      <description>music rectangle</description>
      <type>image</type>
      <id>0</id>
      <posx>60</posx>
      <posy>381</posy>
      <width>90</width>
      <height>120</height>
      <texture>blue_rectangle_music.png</texture>

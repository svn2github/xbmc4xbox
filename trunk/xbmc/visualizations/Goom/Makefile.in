ARCH=@ARCH@
INCLUDES=-I. -I.. -I../../linux -I../../ -I../../../guilib -Igoom2k4-0/src
OBJS=Main.o
SLIB=Goom/Goom.vis
DEFINES+=-DHAS_SDL_OPENGL -DHAS_SDL
CXXFLAGS=-fPIC
DIRS=goom2k4-0

$(SLIB): $(OBJS) goom2k4-0/src/.libs/libgoom2.a
ifeq ($(findstring osx,$(ARCH)), osx)
	$(CXX) -fPIC -bundle -shared -undefined suppress -flat_namespace \
		goom2k4-0/src/.libs/libgoom2.a $(CXXFLAGS) -o $(SLIB) $(OBJS)
	../../../tools/Mach5/wrapper.rb $@;mv output.so $@
else
	$(CXX) -fPIC goom2k4-0/src/*.o -shared $(CXXFLAGS) -o $(SLIB) $(OBJS) \
		`cat ../../cores/DllLoader/exports/wrapper.def` \
		../../cores/DllLoader/exports/wrapper.o
endif
	@find Goom -regextype posix-extended -type f -not -iregex ".*svn.*|.*\.so|.*\.dll|.*\.pyd|.*\.pvr|.*python/.*\.zlib|.*\.vis" -exec install -D -m 0644 "{}" ../../../addons/visualizations/"{}" \; -printf " -- %-75.75f\r"
	@find Goom -type f -not -iregex ".*svn.*|.*win32(dx)?\.vis\.vis" -iregex ".*\.vis" -exec install -D "{}" ../../../addons/visualizations/"{}" \; -printf " -- %-75.75f\r"

goom2k4-0/src/.libs/libgoom2.a:
	$(MAKE) -C goom2k4-0

include ../../../Makefile.include

<window>

 <id>2007</id>
 <defaultcontrol>2</defaultcontrol>

 <controls>

  <control>
   <description>bar image</description>
   <type>image</type>
   <id>1</id>
   <posx>-10</posx>
   <posy>40</posy>
   <width>740</width>
   <height>65</height>
   <texture>osd_menu_bg.png</texture>
   <visible>Player.ShowCodec</visible>
   <animation effect="fade" time="300">VisibleChange</animation>
  </control>

  <control>
   <description>row 1 label</description>
   <type>label</type>
   <id>10</id>
   <posx>70</posx>
   <posy>50</posy>
   <label>-</label>
   <align>left</align>
   <font>font12</font>
   <visible>Player.ShowCodec</visible>
   <animation effect="fade" time="300">VisibleChange</animation>
  </control>

  <control>
   <description>row 2 label</description>
   <type>label</type>
   <id>11</id>
   <posx>70</posx>
   <posy>75</posy>
   <label>-</label>
   <align>left</align>
   <font>font12</font>
   <visible>Player.ShowCodec</visible>
   <animation effect="fade" time="300">VisibleChange</animation>
  </control>

  <control>
   <description>row 2 extra label</description>
   <type>label</type>
   <id>12</id>
   <posx>250</posx>
   <posy>75</posy>
   <label>-</label>
   <align>left</align>
   <font>font12</font>
   <visible>Player.ShowCodec</visible>
   <animation effect="fade" time="300">VisibleChange</animation>
  </control>

  <control>
   <description>pause image</description>
   <type>image</type>
   <id>13</id>
   <align>right</align>
   <posx>580</posx>
   <posy>25</posy>
   <height>64</height>
   <width>128</width>
   <visible>no</visible>
   <texture>video-pause.png</texture>
   <colorkey>0</colorkey>
  </control>

<!-- Media Info controls -->

  <control>
   <description>media info background image</description>
   <type>image</type>
   <id>1</id>
   <posx>-10</posx>
   <posy>435</posy>
   <width>740</width>
   <height>100</height>
   <texture>osd_menu_bg.png</texture>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>cover image</description>
   <type>image</type>
   <id>1</id>
   <posx>75</posx>
   <posy>435</posy>
   <width>100</width>
   <height>100</height>
   <info>MusicPlayer.Cover</info>
   <aspectratio>keep</aspectratio>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>Artist label</description>
   <type>label</type>
   <id>1</id>
   <width>445</width>
   <posx>180</posx>
   <posy>438</posy>
   <info>MusicPlayer.Artist</info>
   <align>left</align>
   <font>special12</font>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>Title label</description>
   <type>label</type>
   <id>1</id>
   <width>430</width>
   <posx>180</posx>
   <posy>459</posy>
   <info>MusicPlayer.Title</info>
   <align>left</align>
   <font>special13</font>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>Album label</description>
   <type>label</type>
   <id>1</id>
   <width>430</width>
   <posx>180</posx>
   <posy>487</posy>
   <info>MusicPlayer.Album</info>
   <align>left</align>
   <font>font10</font>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>time label</description>
   <type>label</type>
   <id>1</id>
   <width>430</width>
   <posx>180</posx>
   <posy>508</posy>
   <label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
   <align>left</align>
   <font>font10</font>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

  <control>
   <description>Playlist</description>
   <type>label</type>
   <id>1</id>
   <width>100</width>
   <posx>660</posx>
   <posy>508</posy>
   <label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
   <align>right</align>
   <font>font10</font>
   <visible>Player.HasMedia + Player.ShowInfo</visible>
   <animation effect="fade" time="500">VisibleChange</animation>
  </control>

 </controls>

</window>

